<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_back"
  >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/profile_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_profile"
                    android:hardwareAccelerated="false"
                    android:largeHeap="true"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_below="@id/profile_icon"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"/>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                            <EditText
                                android:id="@+id/et_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/FirstName"
                                android:inputType="textPersonName"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:background="@drawable/edit_background"
                                />


                            <EditText
                                android:id="@+id/et_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/LastName"
                                android:inputType="textPersonName"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:background="@drawable/edit_background"
                                android:maxLines="1" />

                    </TableRow>
                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->
                        <!--<EditText-->
                            <!--android:id="@+id/et_password"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:drawableStart="@drawable/ic_password"-->
                            <!--android:inputType="textPassword"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:drawablePadding="10dp"-->
                            <!--android:maxLines="1"-->
                            <!--android:maxLength="20"-->
                            <!--android:background="@drawable/edit_background"-->
                            <!--android:layout_margin="5dp"-->
                            <!--android:hint="Change Password"-->
                            <!--android:enabled="false"-->
                            <!--/>-->
                    <!--<ImageView-->
                        <!--android:id="@+id/img_edit_password"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignEnd="@+id/et_password"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginEnd="14dp"-->
                        <!--android:src="@drawable/ic_edit_dark" />-->
                    <!--</RelativeLayout>-->
                        <EditText
                            android:id="@+id/et_confirm_password"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:maxLength="20"
                            android:background="@drawable/edit_background"
                            android:hint="@string/confirm_password"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:visibility="gone"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:maxLines="1"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:drawableLeft="@drawable/ic_email"
                            android:background="@drawable/edit_background"
                            android:drawablePadding="10dp" />

                        <ImageView
                            android:id="@+id/img_edit_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/et_email"
                            android:layout_alignRight="@+id/et_email"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/ic_edit_dark"
                            android:visibility="gone"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_mobile"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="10"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:drawableLeft="@drawable/ic_mobile"
                            android:background="@drawable/edit_background"
                            android:drawablePadding="10dp"
                            android:hint="@string/mobile"
                            android:maxLines="1" />

                        <!--<ImageView-->
                            <!--android:id="@+id/img_edit_mobile"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_alignEnd="@+id/et_mobile"-->
                            <!--android:layout_alignRight="@+id/et_mobile"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_marginEnd="14dp"-->
                            <!--android:layout_marginRight="14dp"-->
                            <!--android:src="@drawable/ic_edit_dark" />-->
                    </RelativeLayout>


                        <EditText
                            android:id="@+id/et_telephone"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:background="@drawable/edit_background"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            android:hint="@string/telephone"/>

                        <EditText
                            android:id="@+id/et_business_name"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:background="@drawable/edit_background"
                            android:hint="@string/business_name"
                            android:maxLines="1"
                            android:inputType="text"

                            />
                        <EditText
                            android:id="@+id/et_address"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:hint="@string/address"
                            android:drawableLeft="@drawable/ic_address"
                            android:background="@drawable/edit_background"
                            android:drawablePadding="10dp"
                            android:maxLines="2"
                            android:inputType="text"

                            />

                        <EditText
                            android:id="@+id/et_address2"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:hint="@string/address2"
                            android:layout_margin="5dp"
                            android:drawablePadding="10dp"
                            android:background="@drawable/edit_background"
                            android:maxLines="2"
                            android:inputType="text"
                            android:visibility="gone"
                            />

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:hint="@string/city"
                            android:maxLines="1"
                            android:background="@drawable/edit_background"
                            android:layout_margin="5dp"
                            android:inputType="text"
                            android:drawableLeft="@drawable/ic_city"/>

                        <EditText
                            android:id="@+id/et_pin"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:background="@drawable/edit_background"
                            android:layout_margin="5dp"
                            android:hint="@string/pin"
                            />
                            <EditText
                                android:id="@+id/et_state"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:maxLines="1"
                                android:background="@drawable/edit_background"
                                android:hint="@string/state"
                                android:inputType="text"
                                />

                            <EditText
                                android:id="@+id/et_country"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:maxLines="1"
                                android:hint="@string/country"
                                android:background="@drawable/edit_background"
                                android:inputType="text"
                                />

                    <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:text="Update"
                    android:textColor="@color/white"
                        android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</ScrollView>
